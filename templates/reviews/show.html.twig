{% extends 'base.html.twig' %}

{% block title %}Reviews{% endblock %}

{% block body %}
    <h1>Reviews</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ review.author }}</td>
            </tr>
            <tr>
                <th>Is_approved</th>
                <td>{{ review.isApproved ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ review.comment }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ review.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reviews_index') }}">back to list</a>

    <a href="{{ path('app_reviews_edit', {'id': review.id}) }}">edit</a>

    {{ include('reviews/_delete_form.html.twig') }}
{% endblock %}
