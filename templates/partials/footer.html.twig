

<!-- Footer -->
<footer class="text-center text-lg-start bg-primary">

  <section class="">
    <div class="container text-center text-md-start mt-5 container-footer">
      <!-- Grid row -->
      <div class="row mt-3">       
        <!-- Grid column -->
        <div class="col-md-4 col-lg-5 col-xl-5 mx-auto mb-md-0 mb-4 container-footer__contact">
          <!-- Links -->
          <h3 class="text-uppercase fw-bold mb-4 text-white">Garage V.Parrot</h3>
          <p class="me-3 text-white">245 avenue Jean Moulin</p>
          <p class="me-3 text-white">
            info@example.com
          </p>
          <p><i class="fas fa-phone me-3 text-white"></i> + 01 234 567 88</p>
          <p><button class="btn btn-info text-white text-uppercase">Nous contacter</button></p>
        </div>
        <!-- Grid column -->

        <div class="col-md-5 col-lg-5 col-xl-5 mx-auto mb-4 container-footer__schedules">
          <!-- Content -->
          <h2 class="text-uppercase mb-4 text-white text-center container-footer__schedules-title">
            Horaires d'ouvertures
          </h2>
          <ul class="p-0 container-footer__schedules-ul">
          {% for schedule in schedules %}
            <li class="container-footer__schedules-li">
              <span class="container-footer__schedules-li-day">{{schedule.day}} :</span>
              <span class="container-footer__schedules-li-time">
              {{schedule.getSchedulesMorning}}
              {% if schedule.getSchedulesAfternoon is defined %}
              | {{ schedule.getSchedulesAfternoon }}
              {% else %} 
              {% endif %}
              </span>
            </li>
          {% endfor %}
          </ul>
        </div>

        <!-- Grid column -->
      </div>
      <!-- Grid row -->
    </div>
  </section>
  <!-- Section: Links  -->

</footer>
<!-- Footer -->