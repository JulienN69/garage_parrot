{% extends 'base.html.twig' %}

{% block title %}Hello CarController!{% endblock %}

{% block body %}

    <div class="d-flex">
    
    
        {% for car in cars %}

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                <h5 class="card-title">{{car.modele}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">Kilomètres : {{car.mileage}} km</h6>
                <h6 class="card-subtitle mb-2 text-muted">Prix : {{car.price}} €</h6>
                <a href="{{path('car_display', {'id':car.id}) }}" class="card-link">afficher</a>
                 {% for equipment in car.car_equipment %}
                <h6>{{equipment.equipment_title}}</h6>
                {% endfor %}
            </div>
        </div>

        {% endfor %}

    </div>
  </tbody>
</table>
{% endblock %}
