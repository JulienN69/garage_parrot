{% extends 'base.html.twig' %}

{% block title %}Reviews index{% endblock %}

{% block body %}
    <h1>Reviews index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Is_approved</th>
                <th>Comment</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.author }}</td>
                <td>{{ review.isApproved ? 'Yes' : 'No' }}</td>
                <td>{{ review.comment }}</td>
                <td>{{ review.note }}</td>
                <td>
                    <a href="{{ path('app_reviews_show', {'id': review.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reviews_new') }}">Create new</a>
{% endblock %}
